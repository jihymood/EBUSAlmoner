<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyDlg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <Button
            android:id="@+id/btnAlbum"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/atten_btn_up_selector"
            android:text="@string/ablum"
            android:textColor="@color/tk_dark_gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@id/btnAlbum"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/atten_btn_down_selector"
            android:text="@string/take_photo"
            android:textColor="@color/tk_dark_gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnVideo"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/btnTakePhoto"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/atten_btn_down_selector"
            android:text="@string/make_video"
            android:textColor="@color/tk_dark_gray"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/btnVideo"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/atten_btn_single_selector"
            android:text="@string/CANCEL"
            android:textColor="@color/red"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
