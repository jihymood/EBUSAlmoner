<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_custom_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_custom_msg_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="设置手机号"
            android:textColor="@color/black_light"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="新号码"
                android:textColor="@color/black_light"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/dialog_changeNum_edittext"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_dialog_buschoose"
                android:hint="\t\t输入新号码"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:singleLine="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认号码"
                android:textColor="@color/black_light"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/dialog_changeNum_comfirmNum_edittext"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_dialog_buschoose"
                android:hint="\t\t再次输入号码"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:layout_marginBottom="15dp"
                android:singleLine="true" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/shape_dialog_custom_ctrl_bg"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dialog_changeNum_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/mainColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/custom_dialog_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/mainColor" />

        <TextView
            android:id="@+id/dialog_changeNum_comfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/mainColor"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
