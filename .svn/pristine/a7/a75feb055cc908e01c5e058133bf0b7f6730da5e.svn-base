package com.xpro.ebusalmoner.baseapi;

import android.content.pm.ActivityInfo;
import android.os.Bundle;
import android.util.Log;
import android.view.Window;

import org.xutils.x;

import cn.jpush.android.api.InstrumentedActivity;

/**
 * @ClassName: SuperActivity
 * @Description: Activtiy基类，用于定义部分属性
 * @author: houyang
 * @date: 2016年9月20日 下午7:15:16
 */
public class SuperActivity extends InstrumentedActivity {
    private static final String TAG = "BaseActivity";

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        // 设置没有标题栏
        requestWindowFeature(Window.FEATURE_NO_TITLE);
        // 设置不允许横屏
        setRequestedOrientation(ActivityInfo.SCREEN_ORIENTATION_PORTRAIT);
        com.xpro.ebusalmoner.baseapi.AtyContainer.getInstance().addActivity(this);
        // xutils初始化
        x.view().inject(this);
        initLayout(savedInstanceState);
        initData();
        Log.e(TAG, getClass().getSimpleName().toString());
    }

    public void initLayout(Bundle savedInstanceState) {

    }

    /**
     * @Title: initData
     * @Description: 其他功能初始化
     * @return: void
     */
    public void initData() {

    }

    @Override
    protected void onDestroy() {
        super.onDestroy();
        com.xpro.ebusalmoner.baseapi.AtyContainer.getInstance().removeActivity(this);
    }
}
