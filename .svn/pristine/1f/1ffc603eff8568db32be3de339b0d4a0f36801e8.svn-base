<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BreakdownActivity_S" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/include_head" />

    <LinearLayout
        android:id="@+id/adapter_routinemaintenance_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/adapter_routinemaintenance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:text="轮胎是否正常"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.xpro.ibusalmoner.widget.FlowLayout
                android:id="@+id/adapter_routinemaintenance_layout"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adapter_routinemaintenance_title"
                android:layout_marginLeft="30dp"
                android:visibility="gone" >
            </com.xpro.ibusalmoner.widget.FlowLayout>

            <TextView
                android:id="@+id/adapter_routinemaintenance_text"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adapter_routinemaintenance_layout"
                android:layout_marginLeft="30dp"
                android:lineSpacingMultiplier="1.7"
                android:text="使用正常"
                android:textColor="#b2b2b2"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/adapter_routinemaintenance_photo"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_below="@+id/adapter_routinemaintenance_text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/photo" />

            <ImageView
                android:id="@+id/adapter_routinemaintenance_write"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_below="@+id/adapter_routinemaintenance_text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/adapter_routinemaintenance_photo"
                android:src="@mipmap/write" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/adapter_routinemaintenance_write"
                android:layout_alignTop="@+id/adapter_routinemaintenance_write"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/adapter_routinemaintenance_write"
                android:scrollbarSize="1dp" >

                <LinearLayout
                    android:id="@+id/adapter_routinemaintenance_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/adapter_routinemaintenance_state_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/normal2" />

            <ImageView
                android:id="@+id/adapter_routinemaintenance_state_error"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/error" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_me_sex_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#dddddd" >
        </View>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="选择状态"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/mine_about"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/arrow_right_gray" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#dddddd" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="故障维修详情"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="轮胎修好"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="仪表修好"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="座椅修好"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>